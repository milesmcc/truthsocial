<div class="public-layout-gradient link-warning">
  <div class="link-warning-navbar">
    <%= link_to root_url do %>
      <%= svg_logo_full %>
    <% end %>
  </div>

  <div class="link-warning-container">
    <div class="container-sm">
      <div class="link-warning-content">
        <div class="link-warning-shield">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path
              fill-rule="evenodd"
              d="M11.484 2.17a.75.75 0 011.032 0 11.209 11.209 0 007.877 3.08.75.75 0 01.722.515 12.74 12.74 0 01.635 3.985c0 5.942-4.064 10.933-9.563 12.348a.749.749 0 01-.374 0C6.314 20.683 2.25 15.692 2.25 9.75c0-1.39.223-2.73.635-3.985a.75.75 0 01.722-.516l.143.001c2.996 0 5.718-1.17 7.734-3.08zM12 8.25a.75.75 0 01.75.75v3.75a.75.75 0 01-1.5 0V9a.75.75 0 01.75-.75zM12 15a.75.75 0 00-.75.75v.008c0 .414.336.75.75.75h.008a.75.75 0 00.75-.75v-.008a.75.75 0 00-.75-.75H12z"
              clip-rule="evenodd"
            />
          </svg>
        </div>

        <h1 class="link-warning-title">
          <%= t("links.title.#{@link.status}") %>
        </h1>

        <p class="link-warning-summary">
          <%= t("links.summary.#{@link.status}", url: @link_url) %>
        </p>

        <div class="link-warning-actions">
          <button
            class="link-warning-button link-warning-button-primary link-warning-button-desktop"
            data-behavior="close-window"
          >
            <% if @link.blocked? %>
              <%= t("links.actions.go_back") %>
            <% else %>
              <%= t("links.actions.go_back_recommended") %>
            <% end %>
          </button>

          <% if @link.warning? %>
            <%= link_to(@link_url, class: "link-warning-button link-warning-button-secondary") do %>
              <%= t("links.actions.continue") %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
