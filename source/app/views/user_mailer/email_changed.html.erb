<table class="w-full" cellpadding="0" cellspacing="0" border="0" role="presentation">
  <tr>
    <td
      class="relative h-200 -top-36 text-center"
      style="background: url(<%= full_pack_url('media/images/mailer/circles.png') %>) no-repeat center center / cover;"
    >
      <%= image_tag(
        full_pack_url('media/images/mailer/icons/email-changed.png'),
        alt: t('devise.mailer.email_changed.title'),
        class: "h-80 w-80 absolute left-1/2 top-1/2 -mt-40 -ml-40") %>

      <table class="w-full" cellpadding="0" cellspacing="0" border="0" role="presentation">
        <tr>
          <td class="relative top-72">
            <h1 class="text-xl text-center">
              <%= t 'devise.mailer.email_changed.title' %>
            </h1>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<table class="w-full" cellpadding="0" cellspacing="0" border="0" role="presentation">
  <tr>
    <td class="relative">
      <table class="w-full" cellpadding="0" cellspacing="0" border="0" role="presentation">
        <tr>
          <td class="relative">
            <p class="text-gray-600 mb-4">
              <%= t 'devise.mailer.email_changed.explanation' %>
            </p>

            <p class="text-primary-600 mb-4">
              <%= @resource.unconfirmed_email %>
            </p>

            <p class="text-gray-600 mb-0">
              <%= t 'devise.mailer.email_changed.extra' %>
            </p>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
