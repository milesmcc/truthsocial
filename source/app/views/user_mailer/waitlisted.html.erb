<table class="w-full" cellpadding="0" cellspacing="0" border="0" role="presentation">
  <tr>
    <td
      class="relative h-200 -top-36 text-center"
      style="background: url(<%= full_pack_url('media/images/mailer/circles.png') %>) no-repeat center center / cover;"
    >
      <%= image_tag(
        full_pack_url('media/images/mailer/icons/waitlisted.png'),
        alt: t('user_mailer.waitlisted.title'),
        class: "h-80 w-80 absolute left-1/2 top-1/2 -mt-40 -ml-40") %>

      <table class="w-full" cellpadding="0" cellspacing="0" border="0" role="presentation">
        <tr>
          <td class="relative top-72">
            <h1 class="text-xl text-center">
              <%= t('user_mailer.waitlisted.title') %>
            </h1>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<table class="w-full" cellpadding="0" cellspacing="0" border="0" role="presentation">
  <tr>
    <td class="relative">
      <table class="w-full" cellpadding="0" cellspacing="0" border="0" role="presentation">
        <tr>
          <td class="relative">
            <p class="text-3xl text-center text-primary-600 my-0">
              <strong>#<%= number_with_delimiter(@user.waitlist_position) %></strong>
            </p>

            <p class="text-gray-600 mb-4">
              <%= t('user_mailer.waitlisted.explanation') %>
            </p>

            <p class="text-gray-600 mb-0">
              <%= t('user_mailer.waitlisted.extra_explanation') %>
            </p>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
